<% provide(:title, 'Game') %>

<h2>New Game</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @game, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :reference %>
      <%= f.text_field :reference, class: 'form-control', readonly: true, value: Time.now %>
      <%= f.submit "Start Game", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
